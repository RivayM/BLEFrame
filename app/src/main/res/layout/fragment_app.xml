<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_device_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageButton
        android:id="@+id/fragment_device_button"
        android:src="@drawable/ic_search_24"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/content_description_search_device"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/dimen_fragment_device_margin_button_search"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.example.bleframe.presentation.custom_view.CustomViewLottie
        android:id="@+id/fragment_device_lottie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/fragment_device_button"
        app:layout_constraintBottom_toBottomOf="@id/fragment_device_button"
        app:layout_constraintLeft_toLeftOf="@id/fragment_device_button"
        app:layout_constraintRight_toRightOf="@id/fragment_device_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>