<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/sample_rv_device_frame">

    <androidx.cardview.widget.CardView
        android:id="@+id/sample_rv_device_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin"
        app:cardBackgroundColor="@color/grey_light"
        app:cardCornerRadius="@dimen/default_radius_container">

        <TextView
            style="@style/Style.TextItemRVText"
            android:id="@+id/sample_rv_device_name_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"/>

        <TextView
            style="@style/TextItemRVTextSmall"
            android:id="@+id/sample_rv_device_mac_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />

        <ImageView
            android:id="@+id/sample_rv_device_image_device"
            android:padding="6.5dp"
            android:contentDescription="@string/name_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right"
            android:layout_gravity="end" />

    </androidx.cardview.widget.CardView>
</FrameLayout>